<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.mdorofeev.finance.auth.repository.SessionRepository">
    <resultMap id="baseResultMap" type="ru.mdorofeev.finance.auth.persistence.Session">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="session_id" property="sessionId" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <update id="createIfNotExistsTable">
        create table if not exists t_session
            (
            id bigint not null,
            user_id bigint,
            session_id bigint,
            status integer
         );
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_session (
          user_id, session_id, status
        )
        VALUES (
        #{userId,jdbcType=INTEGER},
        #{sessionId,jdbcType=INTEGER},
        #{status,jdbcType=VARCHAR}
        )
    </insert>

    <update id="updateSessions">
        update t_session s set s.status = #{newStatus,jdbcType=INTEGER} where s.user_id = #{userId,jdbcType=INTEGER}
    </update>




    <delete id="delete">
        DELETE FROM t_session WHERE id = #{id,jdbcType=INTEGER}
    </delete>
</mapper>
